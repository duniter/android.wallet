<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:text="@string/wallet_transmitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/transmitter_uid"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:singleLine="true"
        android:text=""
        android:maxLines="1"
        android:editable="false"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="To"
        />

    <EditText
        android:id="@+id/receiver_uid"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:singleLine="true"
        android:text="@string/receiver_uid"
        android:maxLines="1"
        />


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/amount"
        android:layout_marginTop="40dp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/amount"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:ems="12"
            android:text=""
            android:maxLines="1"
            android:layout_gravity="bottom"
            />

        <TextView
            android:id="@+id/amount_unit_text"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="@string/unit_coins_label"
            android:gravity="center_vertical|center_horizontal" />


    </LinearLayout>

    <ImageView
        android:id="@+id/toggle_unit_button"
        android:src="@drawable/ic_two_arrows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:paddingEnd="22dp"
        android:paddingStart="22dp" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/converted_amount"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:text=""
            android:maxLines="1"
            android:layout_gravity="bottom"
            android:ems="12"
            android:editable="false"/>

        <TextView
            android:id="@+id/converted_amount_unit_text"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="@string/UD"
            android:gravity="center_vertical|center_horizontal"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/comment"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:hint="@string/comment_hint"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:text=""
        android:maxLines="4"
        android:layout_gravity="bottom"
        />

    <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/transfer"
    android:id="@+id/transfer_button"
    android:layout_gravity="center_horizontal"
    android:drawableLeft="@drawable/coins32"
    android:drawablePadding="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:layout_marginTop="50dp"
    />

    <!-- Login progress -->
    <ProgressBar android:id="@+id/transfer_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal|center_vertical"/>


</LinearLayout>
